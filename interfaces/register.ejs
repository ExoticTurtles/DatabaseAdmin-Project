<% layout('layouts/boilerplate') %> 
<section class="vh-100 d-flex p-2">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
  
          <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
              <form action="/register" method="POST">
                <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                  <p class="lead fw-normal mb-0 me-3">Registrate!</p>
                </div>
      
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <label class="form-label"  id="email-label" for="email">Correo electrónico</label>
                  <input type="email" id="email" name="email" class="form-control form-control-lg"
                    placeholder="Ingrese un correo electrónico" required />
                </div>
              
                <div class="form-outline mb-4">
                  <label class="form-label" id="user-label" for="username">Nombre completo </label>
                  <input id="username" name="username"class="form-control form-control-lg"
                    placeholder="Nombre de usuario" required/>
                  
                </div>
  
                <div class="form-outline mb-4">
                  <label class="form-label" id ="number-label" for="number">Numero telefónico </label>
                  <input type="tel" name="number" id="number" class="form-control form-control-lg"
                    placeholder="Telefono" required/>
                  
                </div>
      
                <!-- Password input -->
                <div class="form-outline mb-3">
                  <label class="form-label" id="password-label" for="password">Contraseña</label>
                  <input type="password" name="password" id="password "  minlength="5" class="form-control form-control-lg"
                    placeholder="Ingrese su contraseña"required />
                  
                </div>
      
                <div class="text-center text-lg-start mt-4 pt-2">
                  <button class="btn btn-lg"
                    style="padding-left: 2.5rem; padding-right: 2.5rem;" id="registerbtn">¡Crear cuenta!</button>
                </div>
      
              </form>
            </div>
  


            
          <div class="col-md-9 col-lg-6 col-xl-5">
            <img src="images/resources/shop.PNG" id="img"
              class="img-fluid" alt="Sample image" title="¿Que esperas? Los cachorros quieren que te registres">
          </div>
  
        </div>
      </div>
</section>