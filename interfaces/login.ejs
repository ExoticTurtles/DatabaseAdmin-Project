<% layout('layouts/boilerplate') %> 
<section class="vh-100 d-flex p-2">
    <div class="container-fluid h-custom">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-lg-6 col-xl-5">
          <img src="images/dogs/puppy_4.PNG"
            class="img-fluid" alt="Sample image" id="img">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <h2 class="text-center p-3 ">¡iniciar sesión!</h2>
          <form action="/login" method="POST">
            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            </div>
  
            <!-- Email input -->
            <div class="form-outline mb-4">
              <label class="form-label"  id="email-label" for="email">Correo eléctronico</label>
              <input type="email" id="email" name="email" class="form-control form-control-lg"
                placeholder="Ingrese un correo electronico" required/>
            </div>
  
            <!-- Password input -->
            <div class="form-outline mb-3">
              <label class="form-label" id="password-label" for="password">Contraseña</label>
              <input type="password" name="password" id="password " class="form-control form-control-lg"
                placeholder="Ingrese su contraseña" required/>
              
            </div>
  
            <div class="text-center text-lg-start mt-4 pt-2">
              <button class="btn btn-primmary p-2 text-center" id="registerbtn">Iniciar</button>
            </div>
            <div class="text-center text-lg-start mt-4 pt-2">
              <a href="/register" class="btn btn-primmary p-2 text-center" id="registerbtn">¿No tienes cuenta? Regístrate</a>
            </div>
  
          </form>
        </div>
      </div>
    </div>
    </section>