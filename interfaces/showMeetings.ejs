<% layout('layouts/boilerplate') %>
<div class="productos">
  <div class="row align-items-center">
      <div class="col-md-6 row justify-content-center">
          <h2 href="#!">Citas pendientes. . . </h2>
      </div>
      <div class="col-md-6 row justify-content-center">
          <img class="big-icon" src="images/resources/huella.png" alt="">
      </div>
  </div>
  <hr class="solid">
</div>
<section class="vh-100 mt-md-6">
    <% for (let meeting of meetings){%>
    <div class="card mb-3 " id="img">
<form action="/showMeetings/<%= meeting._id%>?_method=PUT" method="POST" novalidate class="validated-form" class="p-3">
  <main class='container mt-5'>
    <div class="form-row" id="contenedor">
      <div class="form-group col-md-6">
        <label for="inputPassword4">Fecha de la cita: </label>
        <input type="date" class="form-control" name="meeting[date]" id="datePickerId" value=<%=meeting.date%>>
      </div>
    </div>

    <div class="mb-3">
      <p name="meeting[description]">Contenido de la solicitud: <%=meeting.description%></p>
  </div>
  <div class="mb-3">
    <p  name="meeting[userID.username]">Responsable de la solicitud: <%=meeting.userID.username%></p>
</div>

<div class="mb-3">
    <p  name="meeting[userID.username]">Mascota: <%=meeting.petID.name%></p>
</div>

    <div class="mb-3">
        <select class="form-select" name="meeting[status]" aria-label="Default select example">
            <option selected><%=meeting.status%></option>
            <option value="Pendiente">Pendiente</option>
            <option value="Aprobada">Aprobada</option>
            <option value="Rechazada">Rechazada</option>
          </select>
    </div>
    <button type="submit" class="btn btn-primary m-3">Actualizar</button>
  </form>
</main>
</div>
<% } %> 
</section>

 
<script>
    datePickerId.min = new Date().toISOString().split("T")[0];
</script>