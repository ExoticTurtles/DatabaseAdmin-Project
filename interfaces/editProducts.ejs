<% layout('layouts/boilerplate') %>
<div class="productos">
  <div class="row align-items-center">
      <div class="col-md-6 row justify-content-center">
          <h2 href="#!">Productos</h2>
      </div>
      <div class="col-md-6 row justify-content-center">
          <img class="big-icon" src="images/resources/huella.png" alt="">
      </div>
  </div>
  <hr class="solid">
</div>
<section class="vh-100 mt-md-6">
<form action="/products/<%= product._id%>?_method=PUT" method="POST" novalidate class="validated-form">
  <main class='container mt-5'>
    <div class="form-row" id="contenedor">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Nombre del producto</label>
        <input type="text" class="form-control" name="product[name]" id="inputEmail4" placeholder="products[Nombre]" value="<%=product.name%>"required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword4">Unidades</label>
        <input type="number" class="form-control" name="product[quantity]" id="inputPassword4" placeholder="products[Unidades]" value="<%=product.quantity%>"required min="0">
      </div>
    </div>

    <div class="mb-3">
      <label class="form-label" for="image">Liga de la imagen</label>
      <input class="form-control" type="text" id="image" name="product[image]" value="<%=product.image%>"required>
      <div class="valid-feedback">
        ¡Valído!
      </div>
      
  </div>
    <div class="mb-3">
      <label class="form-label" for="price">Precio en pesos Mexicános</label>
      <div class="input-group">
        <span class="input-group-text" id="price-label">$</span>
      <input type="text" class="form-control" name="product[price]" placeholder="0.00" id="price" aria-label="Price" aria-describedby="price-label" value="<%=product.price%>"required>
      <div class="valid-feedback">
        ¡Valído!
      </div>
      </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="description">Descripción</label>
        <textarea class="form-control" type="text" name="product[description]" id="description" required><%=product.description%></textarea>
        <div class="valid-feedback">
            ¡Valído!
        </div>
        
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
  </form>
</main>
</section>